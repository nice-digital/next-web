{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "composite": true,
    "noEmit": false,
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@/test-utils": ["src/test-utils"],
      "@/config": ["src/config/config"],
      "@/logger": ["src/logging/logger"],
      "@/components/*": ["src/components/*"]
    }
  },
  "include": [".", "tsconfig.json", "../jest.config.js"],
  "exclude": ["dist", ".next"]
}
