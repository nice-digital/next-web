{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "composite": true,
    "noEmit": false,
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@/test-utils": ["src/test-utils"],
      "@/cache": ["src/cache/cache"],
      "@/config": ["src/config/config"],
      "@/logger": ["src/logging/logger"],
      "@/components/*": ["src/components/*"],
      "@/feeds/*": ["src/feeds/*"]
    }
  },
  "include": ["./**/*", "./**/*.json", "../jest.config.js"],
  "exclude": ["dist", ".next"]
}
