{
  "compilerOptions": {
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "checkJs": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "composite": true,
    "noEmit": false,
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@/test-utils/*": [
        "src/test-utils/*"
      ],
      "@/cache": [
        "src/cache/cache"
      ],
      "@/config": [
        "src/config/config"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/logger": [
        "src/logging/logger"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/feeds/*": [
        "src/feeds/*"
      ],
      "@/mocks/*": [
        "src/__mocks__/*"
      ],
      "@/mockData/*": [
        "src/__mocks__/__data__/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/helpers/*": [
        "src/helpers/*"
      ],
      "@/helpers": [
        "src/helpers"
      ],
      "@/types": [
        "src/types"
      ],
    },
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./**/*",
    "./**/*.json",
    "../jest.config.js"
  ],
  "exclude": [
    "dist",
    ".next"
  ],
}
