{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug full stack",
      "type": "node",
      "request": "launch",
       "cwd": "${workspaceFolder}/web",
      "program": "${workspaceFolder}/web/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithChrome",
        "killOnServerStop": true,
        "pattern": "- Local:/+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/web/src",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Next.js with VS Debugger",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev-debug"],
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
    },
    {
      "name": "Next - Debug with Chrome",
      "type": "chrome",
      "userDataDir": true,
      "request": "launch",
      "url": "http://localhost:4000",
      "webRoot": "${workspaceFolder}/web",
      "presentation": {
        "hidden": false,
        "group": "Static site",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Functional tests - current feature",
      "cwd": "${workspaceFolder}/functional-tests",
      "localRoot": "${workspaceFolder}/functional-tests",
      "remoteRoot": "${workspaceFolder}/functional-tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test",
        "--",
        "--spec",
        "${fileBasenameNoExtension}",
        "--baseUrl",
        "${input:baseUrl}"
      ],
      "autoAttachChildProcesses": true,
      "outFiles": [
        "${workspaceFolder}/functional-tests/**/*.js",
        "!**/node_modules/**"
      ],
      "console": "integratedTerminal",
      "protocol": "inspector",
      "sourceMaps": true,
      "disableOptimisticBPs": true,
      "presentation": {
        "hidden": false,
        "group": "Functional tests",
        "order": 1
      }
    }
  ],
  "inputs": [
    {
      "id": "baseUrl",
      "description": "Base URL",
      "default": "http://localhost:4000",
      "type": "pickString",
      "options": [
        "http://localhost:3000",
        "http://localhost:4000",
        "http://localhost:8092",
        "https://dev.nice.org.uk",
        "https://test.nice.org.uk",
        "https://alpha.nice.org.uk",
        "https://beta.nice.org.uk",
        "https://www.nice.org.uk"
      ]
    }
  ]
}
