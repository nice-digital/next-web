{
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [80, 120],
  "files.eol": "\n",
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/coverage": true,
    "**/dist": true,
    "**/.cache": true,
    "**/current": true
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "eslint.codeActionsOnSave.mode": "problems",
  "eslint.lintTask.enable": true,
  "eslint.format.enable": true,
  "debug.javascript.terminalOptions": {
    "skipFiles": ["<node_internals>/**"]
  },
  "editor.wordWrap": "on",
  "debug.showInStatusBar": "always",
  "[feature]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
  },
  "cucumberautocomplete.steps": [
    "functional-tests/steps/given.ts",
    "functional-tests/steps/when.ts",
    "functional-tests/steps/then.ts"
  ],
  "workbench.colorCustomizations": {
		"activityBar.background": "#a1b8ca",
		"titleBar.activeBackground": "#a1b8ca",
		"titleBar.activeForeground": "#222",
		"activityBar.foreground": "#222"
  },
  "jest.jestCommandLine": "npm test --",
  "jest.autoRun": {
    "watch": false,
    "onSave": "test-file"
 },
 "stylelint.validate": ["css", "scss"]
}
